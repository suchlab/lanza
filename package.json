{
  "name": "lanza",
  "version": "2.1.0",
  "description": "Launch-ready server tools to create APIs",
  "keywords": [
    "server",
    "express",
    "fast",
    "utils",
    "mysql",
    "event-bus"
  ],
  "scripts": {
    "build": "rm -rf ./dist && npm run build:esm && npm run build:cjs && sh ./scripts/build-packages.sh",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "prepare": "npm run build",
    "test": "jest --config jestconfig.json"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/mysql": "^2.15.21",
    "@types/uuid": "^8.3.4",
    "axios": "^0.27.2",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suchlab/lanza.git"
  },
  "bugs": {
    "url": "https://github.com/suchlab/lanza/issues"
  },
  "homepage": "https://github.com/suchlab/lanza#readme",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "http": "^0.0.1-security",
    "mysql2": "^2.3.3",
    "uuid": "^9.0.0"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  }
}
